<div class="modal">
    <button class="close-icon">
        <svg class="close-icons-svg">
            <use href="{{svgUrl}}#icon-vector"></use>
        </svg>
    </button>
    <div class="img-small-modal">
        <img src={{posterUrl}} alt="событие" />
    </div>

    <div class="ticket">
        <div class="thumb-large">
            <img src={{posterUrl}} object-fit="cover" alt="событие" />
        </div>

        <ul class="modal-content list">

            <li class="info">
                <h3 class="modal-head">INFO</h3>
                  <div class="description">
                     <p class="text-modal">{{description}}</p>
                  </div>
            </li>

            <li class="info">
                <h3 class="modal-head">WHEN</h3>
                <p class="text-modal">{{dates.start.localDate}}</br>{{dates.start.localTime}} ({{dates.timezone}})</p>
            </li>

            <li class="info">
                <h3 class="modal-head">WHERE</h3>
                <p class="text-modal">{{_embedded.venues.0.city.name}}, {{_embedded.venues.[0].country.name}}</br>{{_embedded.venues.[0].address.line1}}</p>
            </li>

            <li class="info">
                <h3 class="modal-head">WHO</h3>
                <p class="text-modal">{{name}}</p>
            </li>

            <li class="info">
                <h3 class="modal-head">PRICES</h3>

                <div class="info-ticket standart-ticket">
                    <svg class="ticket-icons-svg">
                        <use href="{{svgUrl}}#icon-ticket"></use>
                    </svg>
                    <p class="text-modal">{{priceRanges.type}} {{priceRanges.[0].min}}-{{priceRanges.[0].max}}
                        {{priceRanges.[0].currency}}</p>
                </div>

                <button class="modal-btn ticket-btn">
                    <a class="modal-link" href="{{url}}" target="_blank" rel="noopener noreferrer nofollow">BUY TICKETS</a>
                </button>

                <div class="info-ticket vip-ticket">
                    <svg class="ticket-icons-svg">
                        <use href="{{svgUrl}}#icon-ticket"></use>
                    </svg>

                    <p class="text-modal">VIP</p>
                </div>
            </li>

            <button class="modal-btn vip-btn">
                <a class="modal-link" href="{{url}}" target="_blank" rel="noopener noreferrer nofollow">BUY TICKETS</a>
            </button>
        </ul>
    </div>
    <div class="author">
        <a target="_blank" class="modal-btn author-btn">MORE FROM THIS AUTHOR</a>
    </div>
</div>